<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/your_device_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:gravity="center"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="3"
        android:layout_marginBottom="50dp"
        android:layout_below="@+id/your_device_id">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="Wifi ổ cắm đang kết nối : "
                    android:textColor="@color/bittersweet"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/wifi_infor_dash"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="............."
                    />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:weightSum="2"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="10"
                android:layout_weight="1"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Điện áp"
                    android:layout_weight="2"
                    android:textSize="30sp"
                    android:textColor="@color/verdigris_cyan"
                    />
                <TextView
                    android:id="@+id/voltage_dash"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="___V"
                    android:gravity="center"
                    android:layout_weight="8"
                    android:textSize="40sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="10"
                android:layout_weight="1"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Dòng điện"
                    android:layout_weight="2"
                    android:textSize="30sp"
                    android:textColor="@color/verdigris_cyan"
                    />
                <TextView
                    android:id="@+id/current_dash"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="___A"
                    android:gravity="center"
                    android:layout_weight="8"
                    android:textSize="40sp"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="10"
                android:layout_weight="1">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Công suất"
                    android:layout_weight="2"
                    android:textSize="30sp"
                    android:textColor="@color/verdigris_cyan"
                    />
                <TextView
                    android:id="@+id/power_dash"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="___W"
                    android:gravity="center"
                    android:layout_weight="8"
                    android:textSize="40sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="10"
                android:layout_weight="1"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Tần số"
                    android:layout_weight="2"
                    android:textSize="30sp"
                    android:textColor="@color/verdigris_cyan"
                    />
                <TextView
                    android:id="@+id/freq_dash"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="___Hz"
                    android:gravity="center"
                    android:layout_weight="8"
                    android:textSize="40sp"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:weightSum="2"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="10"
                android:layout_weight="1"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Số điện"
                    android:layout_weight="2"
                    android:textSize="30sp"
                    android:textColor="@color/verdigris_cyan"
                    />
                <TextView
                    android:id="@+id/energy_dash"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="___kWh"
                    android:gravity="center"
                    android:layout_weight="8"
                    android:textSize="40sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="10"
                android:layout_weight="1"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Hệ số công suất"
                    android:layout_weight="2"
                    android:textSize="25sp"
                    android:textColor="@color/verdigris_cyan"
                    />
                <TextView
                    android:id="@+id/pf_dash"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="___"
                    android:gravity="center"
                    android:layout_weight="8"
                    android:textSize="40sp"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <com.getbase.floatingactionbutton.FloatingActionsMenu
        android:layout_width="294dp"
        android:layout_height="294dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom|end"
        app:fab_addButtonColorNormal="@color/bittersweet"
        app:fab_addButtonColorPressed="@color/bittersweet"
        app:fab_expandDirection="up"
        app:fab_labelStyle="@style/LabelStyle"
        app:fab_labelsPosition="left">

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/btn_id_enter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/enterid"
            app:fabSize="normal"
            app:fab_colorNormal="#FFF"
            app:fab_colorPressed="@color/bittersweet"
            app:fab_title="Nhập ID" />

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/btn_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/delete_icon"
            app:fabSize="normal"
            app:fab_colorNormal="#FFF"
            app:fab_colorPressed="@color/bittersweet"
            app:fab_title="Xoá số điện" />

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/btn_alert_statistics"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/list_icon"
            app:fabSize="mini"
            app:fab_colorNormal="#FFF"
            app:fab_colorPressed="@color/bittersweet"
            app:fab_title="Thống kê cảnh báo" />
    </com.getbase.floatingactionbutton.FloatingActionsMenu>

</RelativeLayout>